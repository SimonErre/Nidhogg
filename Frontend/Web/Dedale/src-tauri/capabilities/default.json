{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-close",
    "sql:allow-select",
    "fs:default",
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "$RESOURCE/**"
        }
      ]
    },
    {
      "identifier": "http:default",
      "allow": [
        "https://*.tauri.app"
      ]
    }
  ]
}